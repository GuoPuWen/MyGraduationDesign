<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/filter_show_height"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.sl.utakephoto.crop.CropView
                android:id="@+id/cropView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/loading"
                style="@android:style/Widget.Holo.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:indeterminate="true"
                android:indeterminateOnly="true" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_show_height"
        android:layout_gravity="bottom"
        android:background="@drawable/actionbar_translucent">

        <TextView
            android:id="@+id/filtershow_done"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/filter_show_height"
            android:background="@drawable/filtershow_button_background"
            android:drawableLeft="@drawable/menu_save_photo"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/filtershow_cancl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/filter_show_height"
            android:layout_gravity="bottom|right"
            android:background="@drawable/filtershow_button_background"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/cancle"
            android:textAllCaps="true"
            android:textSize="14sp" />
    </FrameLayout>


</FrameLayout>
